<% layout('layouts/boilerplate') %>
  <h1>All Tweets</h1>
  <div>
    <a href="/tweets/new">Add Tweet</a>
  </div>
 
    <% for (let tweet of tweets) { %>
      <div class="card mb-3">
        <h5 class="card-header">
          liked by
        </h5>
        <div class="card-body mb-3">
          <h5 class="card-title mb-3">Tweet By: <%= tweet.author.username %>
          </h5>
          <p class="card-text mb-3"><%= tweet.tweetText %></p>
          <img src="<%=tweet.image %>" class="img-fluid rounded mx-auto d-block">
        </div>
        <footer>
          <a href="#" class="btn btn-primary mb-3">add buttons here</a>
        </footer>
      </div>
    <% } %>
  
