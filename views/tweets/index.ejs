<% layout('layouts/boilerplate') %> 
  <h1>All Tweets</h1>
  <div>
    <a href="/tweets/new">Add Tweet</a>
  </div>
    <% for (let tweet of tweets) { %>
      <div class="card mb-3">
        <h5 class="card-header">

        </h5>
        <div class="card-body mb-3">
          <h5 class="card-title mb-3">@<%= tweet.author.username %> - <%= tweet.date.toDateString() %>
          </h5>
          <p class="card-text mb-3"><%= tweet.tweetText %></p>
        </div>
        <footer>
          <form action='/tweets/<%=tweet._id%>/act' method='POST'>
            <div class='mb-3'>
              <button class='btn btn-light'>
                &#9825 <span class='badge bg-light text-dark'><%= tweet.likeCount %></span>
              </button>
            </div>
          </form>
        </footer>
      </div>
    <% } %>
  
